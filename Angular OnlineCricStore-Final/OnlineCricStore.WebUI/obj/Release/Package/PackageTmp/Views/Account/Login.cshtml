@*@model OnlineCricStore.WebUI.Models.LoginModel*@

@{
    //ViewBag.Title = "Log in";
    Layout = null;
}



<section id="loginForm">
<h2>Use a local account to log in.</h2>
    
    <form data-ng-submit="sendForm()"  novalidate>
    <fieldset>
        <legend>Log in Form</legend>
        <div class="error" style="color:#0EA008">{{message}}</div>
        <ol>
            <li>
                <label for="UserName">User name</label>
                                <br />
                <input  id="UserName" name="UserName" type="text" data-ng-model="User.UserName">

               <span class="error" data-ng-show="mainForm.userName.$error.required">*</span>
                
            </li>
            <li>
                <label for="UserName">Password</label>
                                <br />
                <input  id="Password" name="Password" type="password" data-ng-model="User.Password">

              <span class="error" data-ng-show="mainForm.userName.$error.required">*</span>
               
            </li>
            <li>
                <input id="RememberMe" name="RememberMe" type="checkbox" data-ng-model="User.RememberMe">
               <label class="checkbox" for="RememberMe">Remember me?</label>
               
            </li>
            <li id="errorMessages" class="error" data-ng-repeat="error in errors">{{error}}</li>
        </ol>
        
         <button class="btn btn-primary" ng-click="Login(User)" >
                       Log in
                    </button>
    </fieldset>
        </form>
    <p>
              <a data-ng-class="{active : activeViewPath==='/Account/Register'}" href="#/Account/Register">Register</a>
         if you don't have an account.
    </p>

</section>


